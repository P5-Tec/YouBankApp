<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouBank" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="logo">@drawable/ic_yb_logo_white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="shapeAppearanceLargeComponent">@style/dialog_round</item>

        <item name="strokeColor">@color/white</item>

        <!-- Makes checkboxes green when checked -->
        <item name="buttonTint">@color/brand_main</item>

    </style>
</resources>
