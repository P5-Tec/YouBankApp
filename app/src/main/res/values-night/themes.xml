<resources xmlns:tools="http://schemas.android.com/tools"
           xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.YouBank" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="logo">@drawable/ic_yb_logo_white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="shapeAppearanceLargeComponent">@style/dialog_round</item>

        <item name="strokeColor">@color/white</item>

        <!-- Makes checkboxes green when checked -->
        <item name="buttonTint">@color/brand_main</item>

    </style>

    <style name="Theme.YouBank.New">
        <item name="colorPrimary">@color/n_brand_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/n_surface</item>
        <item name="backgroundColor">@color/holo_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorBackground">@color/holo_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="strokeColor">@color/n_stroke_brand</item>
    </style>

    <style name="Theme.YouBank.Dracula">
        <item name="android:background">@color/drac_bg</item>
        <item name="colorPrimary">@color/drac_purple</item>
        <item name="colorOnPrimary">@color/drac_forground</item>
        <item name="colorSecondary">@color/drac_gray</item>
        <item name="backgroundColor">@color/drac_bg</item>
        <item name="colorSurface">@color/drac_gray</item>
        <item name="colorOnSurface">@color/drac_forground</item>
        <item name="strokeColor">@color/drac_forground</item>

        <item name="materialButtonTint">@color/drac_gray</item>
        <item name="materialRippleColor">@color/drac_forground</item>

        <item name="android:textColorPrimary">@color/drac_forground</item>

        <item name="accBalancePos">@color/drac_green</item>
        <item name="accBalanceNeg">@color/drac_red</item>
    </style>

    <style name="Theme.YouBank.Dracula.Dark">
        <item name="android:background">@color/drac_bg</item>
        <item name="colorPrimary">@color/drac_purple</item>
        <item name="colorOnPrimary">@color/drac_gray</item>
        <item name="colorSecondary">@color/drac_gray</item>
        <item name="colorOnBackground">@color/drac_comment</item>
        <item name="backgroundColor">@color/drac_bg</item>
        <item name="colorSurface">@color/drac_gray</item>
        <item name="colorOnSurface">@color/drac_forground</item>
        <item name="strokeColor">@color/drac_forground</item>

        <item name="materialButtonTint">@color/drac_gray</item>
        <item name="materialRippleColor">@color/drac_forground</item>

        <item name="android:textColorPrimary">@color/drac_forground</item>
    </style>

    <style name="Theme.YouBank.NoActionBar" parent="Theme.YouBank.Dracula">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
