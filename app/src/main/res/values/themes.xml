<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouBank" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="logo">@drawable/ic_yb_logo</item>
        <item name="backgroundColor">@color/white</item>

        <item name="shapeAppearanceLargeComponent">@style/dialog_round</item>

        <item name="strokeColor">@color/black</item>
    </style>

    <style name="Theme.YouBank.New">
        <item name="colorPrimary">@color/n_l_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/n_l_secondary</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/n_l_surface</item>
        <item name="strokeColor">@color/n_l_surface</item>

        <item name="accBalancePos">@color/n_l_main</item>
        <item name="accBalanceNeg">@color/drac_red</item>

        <item name="materialRippleColor">@color/n_l_surface</item>

        <item name="materialButtonTint">@color/n_l_main</item>

        <item name="colorAccent">@color/n_l_main</item>
    </style>

    <style name="Theme.YouBank.NoActionBar" parent="Theme.YouBank.New">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YouBank.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YouBank.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splashScreen" parent="Theme.YouBank.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>
</resources>
