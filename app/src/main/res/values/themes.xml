<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouBank" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="logo">@drawable/ic_yb_logo</item>
        <item name="backgroundColor">@color/white</item>

        <item name="shapeAppearanceLargeComponent">@style/dialog_round</item>

        <item name="strokeColor">@color/black</item>

    </style>

    <style name="Theme.YouBank.New">
        <item name="colorPrimary">#00b57f</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/holo_dark</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSurface">@color/holo_dark</item>
        <item name="strokeColor">@color/n_stroke_brand</item>
    </style>

    <style name="Theme.YouBank.NoActionBar" parent="Theme.YouBank.New">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YouBank.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YouBank.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
